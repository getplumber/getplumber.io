---
/**
 * * Feature cards showcasing Plumber capabilities
 * Based on Feature2.astro but customized for Plumber
 */
import FeatureCard from "@components/FeatureCard/FeatureCardLarge.astro";

interface FeatureData {
  icon: string;
  title: string;
  text: string;
}

const featureData: FeatureData[] = [
  {
    icon: "tabler/star",
    title: "Mutable Image Tags",
    text: `Flags 'latest', 'dev', and other non-reproducible tags to ensure your pipelines use versioned images.`,
  },
  {
    icon: "tabler/shield-check",
    title: "Untrusted Image Registries",
    text: `Ensures images come from approved sources. Configure trusted registries and block unauthorized sources.`,
  },
  {
    icon: "tabler/lock-square",
    title: "Branch Protection Compliance",
    text: `Verifies critical branches are properly protected according to your organization's security policies.`,
  },
];
---

<section id="plumber-features" class="my-12 md:my-24">
  <div class="site-container">
    <div class="mb-12 text-center">
      <p class="colored-title inline" data-mos="fade-up" data-mos-anchor="#plumber-features">
        What it does
      </p>
      <h2
        class="h2 mt-4"
        data-mos="fade-up"
        data-mos-delay="0.1"
        data-mos-anchor="#plumber-features"
      >
        Plumber scans your GitLab CI/CD configuration
      </h2>
      <p
        class="description mx-auto mt-4 max-w-2xl"
        data-mos="fade-up"
        data-mos-delay="0.2"
        data-mos-anchor="#plumber-features"
      >
        Analyze your pipelines for security and compliance issues with automated checks.
      </p>
    </div>
    <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3">
      {
        featureData.map((feature, idx) => (
          <FeatureCard
            title={feature.title}
            text={feature.text}
            icon={feature.icon}
            data-mos="fade-up"
            data-mos-delay={`${idx * 0.25 + 0.3}`}
            data-mos-anchor="#plumber-features"
          />
        ))
      }
    </div>
  </div>
</section>
