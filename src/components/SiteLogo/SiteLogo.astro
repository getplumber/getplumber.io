---
import logo from "@images/site-logo.svg";
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";
import { Image } from "astro:assets";

import { getLocalizedRoute } from "@/docs/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
---

<a
  class="primary-focus flex items-center align-middle"
  href={getLocalizedRoute(currLocale)}
  aria-label={`${siteData.name} - Go to homepage`}
>
  <Image
    src={logo}
    alt="Plumber logo"
    loading="eager"
    height={100}
    class="my-2 h-10 w-auto"
    aria-hidden="true"
    fetchpriority="high"
  />
  <!-- <div class="text-2xl">{siteData.name}</div> -->
</a>
