---
import Button from "@components/Button/Button.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

const CALENDLY_URL =
  "https://calendly.com/aurelien-plumber/cicd-compliance";
const CONTACT_EMAIL = "hello@getplumber.io";
---

<BaseLayout
  title="Contact Us"
  description="Get in touch by email or book a meeting to discuss CI/CD compliance for your pipelines."
>
  <div class="mt-24 md:mt-36">
    <div class="site-container">
      <!-- Intro -->
      <header class="mx-auto max-w-2xl text-center">
        <h1 class="h1">Contact us</h1>
        <p class="description mt-4">
          Choose how youâ€™d like to get in touch: send us an email or book a call directly.
        </p>
      </header>

      <!-- Two choices: Email & Book a meeting -->
      <div
        class="mx-auto mt-12 grid max-w-4xl gap-6 sm:grid-cols-2"
        data-mos="fade-up"
        data-mos-anchor="body"
      >
        <div
          class="group relative flex flex-col rounded-xl border border-base-300 bg-base-50 p-8 transition hover:border-primary-500 hover:shadow-lg dark:border-base-600 dark:bg-base-800/50 dark:hover:border-primary-400"
        >
          <button
            type="button"
            class="copy-email absolute right-4 top-4 inline-flex h-9 w-9 items-center justify-center rounded-lg text-base-500 transition hover:bg-base-200 hover:text-base-700 dark:text-base-400 dark:hover:bg-base-700 dark:hover:text-base-200"
            data-email={CONTACT_EMAIL}
            aria-label="Copy email address"
            title="Copy email"
          >
            <svg class="copy-icon h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
              />
            </svg>
            <svg class="check-icon hidden h-5 w-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </button>
          <a
            href={`mailto:${CONTACT_EMAIL}`}
            class="flex flex-col focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 rounded-lg -m-2 p-2"
          >
            <span
              class="inline-flex h-12 w-12 items-center justify-center rounded-lg bg-primary-100 text-primary-600 dark:bg-primary-700/40 dark:text-primary-300"
              aria-hidden="true"
            >
              <svg
                class="h-6 w-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
            </span>
            <h2 class="mt-4 text-xl font-semibold text-base-900 dark:text-base-100">
              Email us
            </h2>
            <p class="mt-2 text-base-600 dark:text-base-400">
              Send a message to{" "}
              <span class="font-medium text-primary-600 dark:text-primary-400">{CONTACT_EMAIL}</span>
            </p>
            <span
              class="mt-4 inline-flex items-center gap-1 text-sm font-medium text-primary-600 transition group-hover:gap-2 dark:text-primary-400"
            >
              Open mail client
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        </div>

        <a
          href="#calendly-embed"
          class="group flex flex-col rounded-xl border border-base-300 bg-base-50 p-8 transition hover:border-primary-500 hover:shadow-lg dark:border-base-600 dark:bg-base-800/50 dark:hover:border-primary-400"
        >
          <span
            class="inline-flex h-12 w-12 items-center justify-center rounded-lg bg-primary-100 text-primary-600 dark:bg-primary-700/40 dark:text-primary-300"
            aria-hidden="true"
          >
            <svg
              class="h-6 w-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              />
            </svg>
          </span>
          <h2 class="mt-4 text-xl font-semibold text-base-900 dark:text-base-100">
            Book a meeting
          </h2>
          <p class="mt-2 text-base-600 dark:text-base-400">
            Schedule a call to discuss compliance for your CI/CD pipelines.
          </p>
          <span
            class="mt-4 inline-flex items-center gap-1 text-sm font-medium text-primary-600 transition group-hover:gap-2 dark:text-primary-400"
          >
            Choose a time below
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </span>
        </a>
      </div>

      <!-- Calendly embed -->
      <section
        id="calendly-embed"
        class="mt-16 scroll-mt-24 md:mt-24 md:scroll-mt-36"
        data-mos="fade-up"
        data-mos-anchor="body"
        data-mos-delay="0.1"
      >
        <h2 class="sr-only">Book a meeting</h2>
        <div class="overflow-hidden rounded-xl border border-base-300 bg-base-50 dark:border-base-600 dark:bg-base-200/30">
          <iframe
            title="Schedule a meeting with Plumber"
            src={`${CALENDLY_URL}?hide_landing_page_details=1`}
            width="100%"
            height="700"
            class="min-h-[700px] border-0"
            loading="lazy"
          />
        </div>
      </section>
    </div>
  </div>

  <script>
    document.querySelectorAll(".copy-email").forEach((btn) => {
      btn.addEventListener("click", async (e) => {
        e.preventDefault();
        e.stopPropagation();
        const email = btn.getAttribute("data-email");
        if (!email) return;
        try {
          await navigator.clipboard.writeText(email);
          const copyIcon = btn.querySelector(".copy-icon");
          const checkIcon = btn.querySelector(".check-icon");
          if (copyIcon && checkIcon) {
            copyIcon.classList.add("hidden");
            checkIcon.classList.remove("hidden");
          }
          btn.setAttribute("aria-label", "Copied!");
          setTimeout(() => {
            if (copyIcon && checkIcon) {
              copyIcon.classList.remove("hidden");
              checkIcon.classList.add("hidden");
            }
            btn.setAttribute("aria-label", "Copy email address");
          }, 2000);
        } catch {
          // Fallback: open mailto if clipboard fails
          window.location.href = `mailto:${email}`;
        }
      });
    });
  </script>
</BaseLayout>
